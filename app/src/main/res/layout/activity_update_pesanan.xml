<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:id="@+id/layoutUpdate"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Harga"
                android:textColor="@color/colorBlack"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_textbox"
                android:hint="Masukkan Harga"
                android:inputType="number"
                android:fontFamily="@font/poppins"
                android:paddingStart="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray2"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Jumlah Barang"
                android:textColor="@color/colorBlack"
                android:textSize="17dp"
                android:fontFamily="@font/poppins_bold" />

            <EditText
                android:id="@+id/editJml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_textbox"
                android:hint="Masukkan Jumlah Barang"
                android:fontFamily="@font/poppins"
                android:paddingStart="10dp"
                android:inputType="number"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray2"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>